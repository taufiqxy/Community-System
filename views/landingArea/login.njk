{% extends "../layout/landingLayout.njk" %}

{% block content %}

<h2>Login</h2>
<hr>
<div class="container w-25">
    <form>
        <!-- Email input -->
        <div class="form-outline mb-3 text-start">
            <label class="form-label" for="">Email address</label>
            <input type="email" id="form2Example1" class="form-control" />
            <small id="emailHelp" class="form-text text-muted">Make Sure You Enter Valid Email!</small>
        </div>
        <!-- Password input -->
        <div class="form-outline mb-3 text-start">
            <label class="form-label" for="">Password</label>
            <input type="password" id="" class="form-control" />
        </div>
        <!-- Submit button -->
        <div class="form-outline mb-3 d-grid text-center">
            <button type="button" class="btn btn-primary mb-4">Sign in</button>
        </div>
    </form>
</div>

{% endblock %}