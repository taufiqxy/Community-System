{% extends "../layout/adminLayout.njk" %}

{% block title %}Show Data{% endblock %}
{% block activeShow %}active{% endblock %}

{%block content %}
<h3 class="mb-3">Data karyawan</h3>
<hr>
<div class="row">
  <div class="col-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="text-start">ID</th>
          <th class="text-start">Nama Lengkap</th>
          <th class="text-start">Email</th>
          <th class="text-start">Alamat</th>
        </tr>
      </thead>
      <tbody>
        {% for a_karyawan in list_karyawan %}
        <tr>
        <th class="text-start">{{ a_karyawan[0] }}</th>
        <td class="text-start">{{ a_karyawan[1] }}</td>
        <td class="text-start">{{ a_karyawan[2] }}</td>
        <td class="text-start">{{ a_karyawan[3] }}</td>
        </tr>
        {% else %}
        <td colspan="6" class="text-center">Tidak Ada Data</td>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{%endblock %}
